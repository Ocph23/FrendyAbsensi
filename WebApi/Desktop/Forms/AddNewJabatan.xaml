    <Grid Style="{StaticResource ContentRoot}">
        <Grid MinWidth="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Title}" Style="{StaticResource Heading2}" Grid.Row="0" />
