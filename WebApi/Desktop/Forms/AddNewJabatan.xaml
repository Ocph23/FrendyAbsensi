                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30*"/>
                    <ColumnDefinition Width="70*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="10">
                    <TextBlock VerticalAlignment="Center" Margin="3" Height="35"  Text="Bidang"/>
                    <TextBlock VerticalAlignment="Center" Margin="3" Height="35"  Text="Nama"/>
                    <TextBlock Margin="3" Height="35"  Text="Keterangan"/>
                </StackPanel>
