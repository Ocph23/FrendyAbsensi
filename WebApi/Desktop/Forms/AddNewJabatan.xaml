                    <ComboBox ItemsSource="{Binding Bidangs}" Height="35" Margin="3" SelectedValue="{Binding IdBidang,UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" SelectedValuePath="Id" DisplayMemberPath="Nama"/>
